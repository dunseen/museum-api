{
  "name": "museum-api",
  "version": "1.2.0",
  "description": "Museum API is a RESTful API built with NestJS, TypeORM, and PostgreSQL. It provides endpoints for managing museum collections, exhibitions, and visitor information.",
  "author": "Davys Lima",
  "private": true,
  "license": "MIT",
  "scripts": {
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "docker:dev": "docker compose -f docker/compose/docker-compose.dev.yml up",
    "docker:dev:build": "docker compose -f docker/compose/docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f docker/compose/docker-compose.dev.yml down",
    "docker:test": "docker compose -f docker/compose/docker-compose.test.yml up --abort-on-container-exit",
    "docker:test:down": "docker compose -f docker/compose/docker-compose.test.yml down -v",
    "docker:build": "docker build -f docker/dockerfiles/Dockerfile.prod -t davys/museum-api:latest .",
    "docker:stack:deploy": "bash docker/scripts/deploy-stack.sh",
    "docker:stack:remove": "bash docker/scripts/remove-stack.sh",
    "docker:stack:update": "bash docker/scripts/update-stack.sh",
    "migration:generate": "npm run typeorm -- --dataSource=src/database/data-source.ts migration:generate",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:run": "npm run typeorm -- --dataSource=src/database/data-source.ts migration:run",
    "migration:run:dist": "node node_modules/typeorm/cli.js -d dist/database/data-source.js migration:run",
    "migration:revert": "npm run typeorm -- --dataSource=src/database/data-source.ts migration:revert",
    "schema:drop": "npm run typeorm -- --dataSource=src/database/data-source.ts schema:drop",
    "seed:create": "hygen seeds create-relational",
    "generate:resource": "hygen generate relational-resource",
    "postgenerate:resource": "npm run lint -- --fix",
    "add:property:to-all-db": "hygen property add-to-all-db",
    "postadd:property:to-all-db": "npm run lint -- --fix",
    "add:property": "hygen property add-to-relational",
    "postadd:property": "npm run lint -- --fix",
    "seed:run": "ts-node -r tsconfig-paths/register ./src/database/seeds/relational/run-seed.ts",
    "seed:run:dist": "node dist/database/seeds/relational/run-seed.js",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:swc": "nest start -b swc -w",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "is-ci || husky",
    "release": "release-it",
    "reset": "npm run schema:drop && npm run migration:run && npm run seed:run"
  },
  "dependencies": {
    "@nestjs/common": "10.4.16",
    "@nestjs/config": "3.2.3",
    "@nestjs/core": "10.4.1",
    "@nestjs/event-emitter": "3.0.1",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.4.1",
    "@nestjs/swagger": "7.4.0",
    "@nestjs/typeorm": "10.0.2",
    "@sentry/nestjs": "^10.26.0",
    "@sentry/profiling-node": "^10.26.0",
    "@types/multer-s3": "3.0.3",
    "bcryptjs": "2.4.3",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "dotenv": "16.4.5",
    "handlebars": "4.7.8",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.2",
    "minio": "^8.0.4",
    "ms": "2.1.3",
    "multer": "1.4.5-lts.1",
    "multer-s3": "3.0.1",
    "nestjs-i18n": "10.4.5",
    "nestjs-minio-client": "^2.2.0",
    "nodemailer": "6.9.14",
    "passport": "0.7.0",
    "passport-anonymous": "1.0.1",
    "passport-jwt": "4.0.1",
    "pg": "8.12.0",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.1",
    "source-map-support": "0.5.21",
    "swagger-ui-express": "5.0.1",
    "typeorm": "0.3.20"
  },
  "devDependencies": {
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@nestjs/cli": "10.4.4",
    "@nestjs/schematics": "10.1.3",
    "@nestjs/testing": "10.4.1",
    "@release-it/conventional-changelog": "8.0.2",
    "@swc/cli": "0.4.0",
    "@swc/core": "1.7.11",
    "@types/bcryptjs": "2.4.6",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/ms": "0.7.34",
    "@types/multer": "1.4.11",
    "@types/node": "20.14.13",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-anonymous": "1.0.5",
    "@types/passport-jwt": "4.0.1",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.1.0",
    "@typescript-eslint/parser": "8.1.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "9.1.4",
    "hygen": "6.2.11",
    "is-ci": "3.0.1",
    "jest": "29.7.0",
    "prettier": "3.7.4",
    "prompts": "2.4.2",
    "release-it": "17.6.0",
    "supertest": "7.0.0",
    "ts-jest": "29.2.3",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tslib": "2.6.3",
    "typescript": "5.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "chore(deps)",
              "section": "Dependency Upgrades"
            },
            {
              "type": "fix(deps)",
              "section": "Dependency Upgrades"
            },
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "perf",
              "section": "Performance Improvements"
            },
            {
              "type": "revert",
              "section": "Reverts"
            },
            {
              "type": "docs",
              "section": "Documentation"
            },
            {
              "type": "refactor",
              "section": "Code Refactoring"
            },
            {
              "type": "test",
              "section": "Tests"
            },
            {
              "type": "ci",
              "section": "Continuous Integration"
            }
          ]
        }
      }
    }
  }
}